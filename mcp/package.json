{
  "name": "kura-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for KURA Notes - supports both SSE (remote) and stdio (local) transports",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "kura-mcp": "dist/stdio-server.js"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:stdio": "tsx watch src/stdio-server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:stdio": "node dist/stdio-server.js",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "kura-notes",
    "sse"
  ],
  "author": "Till Maessen",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.21.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^20.19.25",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
