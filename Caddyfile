# ============================================
# KURA Notes - Caddy Reverse Proxy Configuration
# ============================================

{
    # Global options
    admin off
    auto_https on
}

# Main site configuration
kura.tillmaessen.de {
    # Enable automatic HTTPS with Let's Encrypt
    tls {
        protocols tls1.2 tls1.3
    }

    # Logging
    log {
        output file /var/log/caddy/access.log
        format json
    }

    # MCP Server (SSE endpoint)
    # IMPORTANT: SSE requires special handling for persistent connections
    handle /mcp* {
        reverse_proxy mcp:3001 {
            # Required for SSE to work properly
            header_up Connection {http.request.header.Connection}
            header_up Upgrade {http.request.header.Upgrade}

            # Preserve original headers
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}

            # No buffering for SSE
            flush_interval -1
        }
    }

    # KURA API endpoints
    handle /api* {
        reverse_proxy api:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Health check endpoint
    handle /health {
        reverse_proxy api:3000 {
            header_up Host {host}
        }
    }

    # Serve static files for web interface (if any)
    handle /* {
        reverse_proxy api:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Security headers
    header {
        # Prevent clickjacking
        X-Frame-Options "SAMEORIGIN"

        # XSS protection
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"

        # Content Security Policy
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"

        # HSTS (only enable after confirming HTTPS works)
        # Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

        # Remove server information
        -Server
    }
}
